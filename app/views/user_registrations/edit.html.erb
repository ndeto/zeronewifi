
<%= render 'layouts/alerts' %>
<div class="col-md-12">
<h1 class="myclass text-center"><i class="fa fa-edit"></i> Edit <%= resource_name.to_s.humanize %> Details</h1>
</div>
<div class="col-md-8 col-md-offset-2 col-xs-12" style="background:#f5f5f5;margin-bottom:8em">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:'', method: :put }) do |f| %>

  <%= devise_error_messages! %>


<div class="form-group">
	<label style="margin-top:2em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> Email </label>
	<div class="col-sm-12">
		<%= f.text_field :email, class:'col-xs-12 col-sm-12', placeholder:"Email", required:'required' %>
	</div>
</div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<div class="form-group">
	<label style="margin-top:2em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> Password - <% if @minimum_password_length %><em style="color:red"><%= @minimum_password_length %> characters minimum</em><% end %> <i>(leave blank if you don't want to change it).</i></label>
	<div class="col-sm-12">
		<%= f.password_field :password, class:'col-xs-12 col-sm-12', placeholder:"Password" %>

	</div>
</div>

<div class="form-group">
	<label style="margin-top:2em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> Confirm Password </label>
	<div class="col-sm-12">
		<%= f.password_field :password_confirmation, class:'col-xs-12 col-sm-12', placeholder:"Password",  autocomplete: "off" %>
	</div>
</div>

<div class="form-group">
	<label style="margin-top:2em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> Current Password </label>
	<div class="col-sm-12">
		<%= f.password_field :current_password, class:'col-xs-12 col-sm-12', placeholder:"Current Password", required:'required',  autocomplete: "off" %>
	</div>
</div>

<div class="form-group">
	<label style="margin-top:2em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> Avatar </label>
	<div class="col-sm-12">
		<%= f.file_field :avatar, class:'col-xs-12 col-sm-12' %>
	</div>
</div>
<div class="col-md-12" style="margin-top:4em;">
	<div class="col-md-12 text-center">
		<%= f.button type:'submit', class:"submit-button" do %>
		<i class="ace-icon fa fa-save bigger-110"></i>
		Save User Details
		<% end %>
	</div>
</div>
<div class="clearfix"></div>

<% end %>

<%= video_tag resource.avatar.url %>
</div>
