<div class="col-md-6 col-md-offset-3">
<h1>Edit <%= @storecampaign.name %></h1>

<%= form_for :storecampaign, :url => {:controller => 'store_campaigns', :action => 'update'},method:'put' do |f|%>

<% if @storecampaign.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

	<ul>
		<% @storecampaign.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<%= f.label :name %>
	<%= f.text_field :name,class:'form-control' %>
</div>

<div class="form-group">
	<%= f.label "Sponsored Text" %>
	<%= f.check_box :sponsored_text_status %>
</div>

<div class="form-group">
	<%= f.label "Sponsored Text" %>
	<%= f.text_area :sponsored_text, class:'form-control' %>
</div>

<div class="form-group">
	<%= f.label "Campaign Text" %>
	<%= f.check_box :campaign_text_status %>
</div>
<div class="form-group">
	<%= f.label "Campaign Text" %>
	<%= f.text_area :campaign_text,class:'form-control' %>
</div>

<div class="field">
    <%= f.label "Campaign Image" %>
    <%= f.file_field :media %>
  </div>
  
  
  <div class="field">
    <%= f.label "Splash Image" %>
    <%= f.file_field :splashimage %>
  </div>
  
  <div class="field">
    <%= f.label "Image Background" %>
    <%= f.radio_button(:background, 'image')%>
  </div>
  
  <div class="field">
    <%= f.label "Color Background" %>
    <%= f.radio_button(:background, "color") %>
  </div>
  
  <div class="field">
    <%= f.label "Background Color" %>
    <%= f.text_field :background_color, class:'colorpicker' %>
  </div>
  
  <div class="field">
    <%= f.label "Background Image" %>
    <%= f.file_field :bg_img %>
  </div>
  
  
  

<p>
	<%= f.submit%>
</p>
<% end %>


</div>

<div class="row">
	<div class="col-md-4 col-md-offset-1"><%= image_tag(@storecampaign.media_url.to_s, width:'100%') %></div>
	
	<div class="col-md-4 col-md-offset-1"><%= image_tag(@storecampaign.splashimage_url.to_s, width:'100%') %></div>
	
	<div class="col-md-4 col-md-offset-1"><%= image_tag(@storecampaign.bg_img_url.to_s, width:'100%') %></div>
	</div>
