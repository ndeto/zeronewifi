<h1>Edit <%= @storecampaign.name %></h1>

<%= form_for :storecampaign, :url => {:controller => 'store_campaigns', :action => 'update'},method:'put' do |f|%>
<div class="row">
	<div class="col-md-offset-1 col-md-5 col-xs-12">
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name,class:'form-control' %>
		</div>
	</div>
	<div class="col-md-offset-1 col-md-5 col-xs-12">
		<div class="form-group">
			<%= f.label "Splash Page" %>
			<%= f.check_box :splashpage_status %>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-md-5 col-md-offset-1">
		<div class="form-group">
			<%= f.label "Sponsored Text" %>
			<%= f.check_box :sponsored_text_status %>
		</div>

		<div class="form-group">
			<%= f.label "Sponsored Text" %>
			<%= f.text_area :sponsored_text, class:'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label "Campaign Text" %>
			<%= f.check_box :campaign_text_status %>
		</div>
		<div class="form-group">
			<%= f.label "Campaign Text" %>
			<%= f.text_area :campaign_text,class:'form-control' %>
		</div>
	</div>
	<div class="col-md-5 col-md-offset-1">
		<div class="col-md-6">
			<div class="field">
				<%= f.label "Splash Image" %><p>
				Opacity: <%= f.range_field(:splashimage_opacity, in: 0..1, step: 0.1, id:'op' )%>
				<%= f.file_field :splashimage %>
				
			</div>
			<br/>

			<div id='splash' class="field" style="opacity:<%= @storecampaign.splashimage_opacity %>">
				<%= image_tag(@storecampaign.splashimage_url(:thumb).to_s ) %>
			</div>
		</div>

		<div class="col-md-6">

			<div class="field">
				<%= f.label "Campaign Image" %>
				<%= f.file_field :media %>
			</div>
			<br/>

			<div class="field">
				<%= image_tag(@storecampaign.media_url(:thumb).to_s) %>
			</div>
		</div>

	</div>

</div>
<br/>
<br/>
<div class="row">
	<div class="col-md-5 col-md-offset-1">
		<div class="col-md-6">
			<div class="field">
				<%= f.label "Image Background" %>
				<%= f.radio_button(:background, 'image')%>
			</div>
			</p>
			<div class="field">
				<%= f.label "Choose background Image" %>
				<%= f.file_field :bg_img %>
			</div>
		</div>
		<div class="col-md-6">
			<div class="field">
				<%= image_tag(@storecampaign.bg_img_url(:thumb).to_s) %>

			</div>
		</div>
		</div>
		<div class="col-md-5 col-md-offset-1">
			<div class="col-md-6">
				<div class="field">
					<%= f.label "Color Background" %>
					<%= f.radio_button(:background, "color") %>
				</div>
				</p>
				<div class="field">
					<%= f.label "Background Color" %>
					<%= f.text_field :background_color, class:'colorpicker' %>
				</div>
			</div>
			<div id="clrbx" style="height:250px;width:250px;background-color:<%= @storecampaign.background_color %>;" class="col-md-6"></div>

		</div>
	</div>
	<br/>
	<br/>
	<div class="row">
		<div class="text-center col-md-offset-3 col-md-6">
			<p>
				<%= f.submit 'Save Changes', class:'btn btn-primary'%>
			</p>
		</div>

	</div>

	<% end %>
