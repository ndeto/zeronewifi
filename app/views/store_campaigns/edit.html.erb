<%= render 'layouts/alerts' %>
<div class="col-md-12">
<h1 class="myclass text-center"><i class="fa fa-edit"></i> Edit <%= @storecampaign.name %></h1>
</div>
<div class="col-md-10 col-md-offset-1 col-xs-12" style="background:#f5f5f5;margin-bottom:8em">
<%= form_for :storecampaign, :url => {:controller => 'store_campaigns', :action => 'update'},method:'put' do |f|%>
<div class="col-md-12">
	<div class="col-md-6 col-xs-12">
		<div class="form-group">
			<%= f.label :name,style:'margin-top:2em' %>
			<%= f.text_field :name,class:'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label "Show Splash Page",style:'margin-top:2em' %><br>
			<%= f.check_box :splashpage_status %>
		</div>
<!-- </div> -->
        <div class="form-group">
          <%= f.label "Text Color",style:'margin-top:2em' %>
          <%= f.text_field :text_color, class:'colorpicker2' %>
        </div>
				<div class="form-group">
        <div id="clrbx2" style="display:block;height:10px;padding:1em;border-style:solid;border-color:#000000;background-color:<% if !@storecampaign.text_color.nil? %><%= @storecampaign.text_color %><% else %> <%= 'whitesmoke' %> <% end %>;" class="backcolor2 col-md-12"></div>
				</div>
		<div class="form-group">
			<%= f.label "Sponsored Text",style:'margin-top:2em' %><br>
			<%= f.check_box :sponsored_text_status %>
		</div>

		<div class="form-group">
			<%= f.label "Sponsored Text",style:'margin-top:2em' %>
			<%= f.text_area :sponsored_text, class:'form-control',style:'height:8em' %>
		</div>

		<div class="form-group">
			<%= f.label "Campaign Text",style:'margin-top:2em' %><br>
			<%= f.check_box :campaign_text_status %>
		</div>
		<div class="form-group">
			<%= f.label "Campaign Text",style:'margin-top:2em' %>
			<%= f.text_area :campaign_text,class:'form-control',style:'height:8em' %>
		</div>
		<!-- <div class="col-md-12"> -->

	</div>
	<div class="col-md-6 col-xs-12">
<!-- <div class="col-md-12"> -->
<div class="form-group">
	<%= f.label "Splash Image",style:'margin-top:2em' %>
	<p>
		<%= f.file_field :splashimage %>
</div>

<div id='splash' class="field" style="opacity:<%= @storecampaign.splashimage_opacity %>">
	<%= image_tag(@storecampaign.splashimage_url(:thumb).to_s ) %>
	<br/>

</div>
Opacity: <%= f.range_field(:splashimage_opacity, in: 0..1, step: 0.1, id:'op' )%>

<!-- </div> -->
<%if @storecampaign.campaign_id==1%>
<!-- <div class="col-md-12"> -->
<div class="field">
	<%= f.label "Campaign Image",style:'margin-top:2em' %>
	<%= f.file_field :media %>
</div>
<br/>

<div class="field">
	<%= image_tag(@storecampaign.media_url(:thumb).to_s) %>
</div>
<!-- </div> -->
<% else %>
<!-- <div class="col-md-12"> -->
<div class="field">
	<%= f.label "Campaign Video",style:'margin-top:2em' %>
	<%= f.file_field :video %>
</div>
<br/>

<div style="border-style: solid; border-bottom-color: #CCCCCC;border-width: 1px;" class="field">
	<%= video_tag @storecampaign.video.url, width:'100%', controls:'' %>
</div>
<!-- </div> -->
<%end%>
			<div class="field">
				<%= f.label "Image Background",style:'margin-top:2em' %>
				<%= f.radio_button(:background, 'image', id:'back')%>
			</div>
			</p>
			<div class="field back">
				<%= f.label "Choose background Image",style:'margin-top:2em' %>
				<%= f.file_field :bg_img %>
			</div>
			<div class="field">
				<%= image_tag(@storecampaign.bg_img_url(:thumb).to_s) %>
			</div>
			<div class="field">
				<%= f.label "Color Background",style:'margin-top:2em' %>
				<%= f.radio_button(:background, "color", id:'color') %>
			</div>
			</p>
			<div class="field backcolor">
				<%= f.label "Background Color",style:'margin-top:2em' %>
				<%= f.text_field :background_color, class:'colorpicker' %><br><br>
			</div>
			<div class="form-group">
		<div id="clrbx" style="height:10px;padding:1em;border-style:solid;border-color:#000000;background-color:<% if !@storecampaign.background_color.nil? %><%= @storecampaign.background_color %><% else %> <%= whitesmoke %> <% end %>;" class=" backcolor col-md-12"></div>
			</div>
<!-- </div>
<div class="col-md-12"> -->
      <div class="field">
        <%= f.label "Enable Login by Facebook Like",style:'margin-top:2em' %><br>
		  <%= f.check_box :fb_status %>
      </div>
      <br>
      <div class="field">
        <%= f.label "Facebook Page",style:'margin-top:2em' %>
        <%= f.text_field :fb_link %>
      </div>
      <div class="form-group">
        <%= f.label "Enable SMS Login",style:'margin-top:2em' %><br>
        <%= f.check_box :sms_status %>
      </div>
      <div class="form-group">
        <%= f.label "Enable Email Login",style:'margin-top:2em' %><br>
        <%= f.check_box :email_status %>
      </div>
	</div>
</div>
<div class="col-md-12 text-center" style="margin-bottom:8em;margin-top:8em">
	<%= f.button type:'submit', class:"submit-button" do %>
	<i class="ace-icon fa fa-save bigger-110"></i>
	Save Campaign Changes
	<% end %>
</div>
	<% end %>
</div>
