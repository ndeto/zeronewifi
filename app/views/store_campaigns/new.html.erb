
<%= render 'layouts/alerts' %>
<div class="col-md-12">
<h1 class="myclass text-center">Create New Campaign</h1>
</div>

<%= form_for :storecampaign, url:{controller:'store_campaigns', action:'create'}, html:{class:''} do |f|%>
<div class="col-md-8 col-md-offset-2 col-xs-12">
<div class="form-group">
	<label style="margin-top:4em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> Name</label>
	<div class="col-sm-12">
		<%= f.text_field :name, class:'form-control', class:"col-xs-12 col-sm-12", required:'required' %></p>
		<!-- <input type="text" id="form-field-1" placeholder="Username" class="col-xs-10 col-sm-5" /> -->
	</div>
</div>

<div class="form-group">
	<label style="margin-top:2em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> Campaign Type</label>
	<div class="col-sm-12">
		<%= f.select :campaign_id, options_from_collection_for_select(Campaign.all, 'id','display'),{} ,{:class=>'col-xs-12 col-sm-12'} %></p>
		<!-- <input type="text" id="form-field-1" placeholder="Username" class="col-xs-10 col-sm-5" /> -->
	</div>
</div>

<div class="col-md-12" style="margin-top:4em;margin-bottom:8em">
	<div class="col-md-12 text-center">
		<%= f.button type:'submit', class:"submit-button" do %>
		<i class="ace-icon fa fa-save bigger-110"></i>
		Save Campaign Details
		<% end %>
	</div>
</div>
<div class="clearfix"></div>
<%end%>
</div>
