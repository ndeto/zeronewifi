<div class="col-md-6 col-md-offset-3">
<h1>New Campagin</h1>

<%= form_for :storecampaign, url:{controller:'store_campaigns', action:'create'} do |f|%>

<div>
	<%= f.label :name %></p>
	<%= f.text_field :name, class:'form-control' %></p>
</div>

<div>
	<%= f.label "Campaign" %></p>
	<%= f.select :campaign_id, options_from_collection_for_select(Campaign.all, 'id','name'),{} ,{:class=>'form-control'} %></p>
</div>


<%= f.submit "Add Campaign", class:'btn btn-primary'%>

<%end%>
</div>