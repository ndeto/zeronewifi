<%= render 'layouts/alerts' %>
<div class="row" >
<div class="col-md-6 col-md-offset-3">
<h1>New Campaign</h1>	
</div>
</div>

<br/>

<%= form_for :storecampaign, url:{controller:'store_campaigns', action:'create'}, html:{class:'form-horizontal'} do |f|%>

<div class="form-group">
	<label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Name</label>

	<div class="col-sm-9">
		<%= f.text_field :name, class:'form-control', class:"col-xs-10 col-sm-5", required:'required' %></p>
		<!-- <input type="text" id="form-field-1" placeholder="Username" class="col-xs-10 col-sm-5" /> -->
	</div>
</div>

<div class="form-group">
	<label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Campaign Type</label>

	<div class="col-sm-9">
		<%= f.select :campaign_id, options_from_collection_for_select(Campaign.all, 'id','display'),{} ,{:class=>'col-xs-10 col-sm-5'} %></p>
		<!-- <input type="text" id="form-field-1" placeholder="Username" class="col-xs-10 col-sm-5" /> -->
	</div>
</div>

<div class="clearfix form-actions">
	<div class="col-md-offset-3 col-md-9">
		
		<%= f.button type: 'submit', class: "btn btn-info", id: "register-button" do %>
        <i class="ace-icon fa fa-check bigger-110"></i> Save
    <% end %>
    
		
	</div>
</div>



<%end%>
