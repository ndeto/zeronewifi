<%= render 'layouts/alerts'%>
<%= form_for :store, :url => {:controller => 'stores', :action =>'update'}, :html => {class:'form-horizontal'}, method:'put'  do |f| %>

<div class="form-group">
	<label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Store Name </label>

	<div class="col-sm-9">
		<%= f.text_field :store_name, class:'col-xs-10 col-sm-5', placeholder:"Store Name", required:'required' %>
	</div>
</div>

<div class="form-group">
	<label class="col-sm-3 control-label no-padding-right" for="form-field-1"> UserName </label>

	<div class="col-sm-9">
		<%= f.text_field :username, class:'col-xs-10 col-sm-5', placeholder:"UserName" %>
	</div>
</div>

<div class="form-group">
	<label class="col-sm-3 control-label no-padding-right text-left" for="form-field-1"> Store Active </label>

	<div class="col-sm-9">
		<%= f.check_box :active, class:'col-xs-10 col-sm-5' %>
	</div>
</div>



<div class="clearfix form-actions">
	<div class="col-md-offset-3 col-md-9">
		<%= f.button type:'submit', class:"btn btn-info" do %>
		<i class="ace-icon fa fa-check bigger-110"></i>
		Submit
		<% end %>
	</div>
</div>

<%end%>
