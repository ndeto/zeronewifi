<%= render 'layouts/alerts'%>
<div class="col-md-12">
<h1 class="myclass text-center"><i class="fa fa-edit"></i> Edit Store Details</h1>
</div>
<div class="col-md-8 col-md-offset-2 col-xs-12" style="background:#f5f5f5;margin-bottom:8em">
<%= form_for :store, :url => {:controller => 'stores', :action =>'update'}, :html => {class:''}, method:'put'  do |f| %>

<div class="form-group">
	<label style="margin-top:2em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> Store Name </label>

	<div class="col-sm-12">
		<%= f.text_field :store_name, class:'col-xs-12 col-sm-12', placeholder:"Store Name", required:'required' %>
	</div>
</div>

<div class="form-group">
	<label style="margin-top:2em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> UserName </label>

	<div class="col-sm-12">
		<%= f.text_field :username, class:'col-xs-12 col-sm-12', placeholder:"UserName" %>
	</div>
</div>

    <div class="form-group">
      <label style="margin-top:2em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> Hotspot Address/Default Gateway </label>

      <div class="col-sm-12">
        <%= f.text_field :network_ip, class:'col-xs-12 col-sm-12', placeholder:"e.g 192.168.10.1, hotel.login.com" %>
      </div>
    </div>


      <div class="form-group">
        <label style="margin-top:2em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> Ticket Key </label>

        <div class="col-sm-12">
          <%= f.text_field :ticket_key, class:'col-xs-12 col-sm-12', placeholder:"ticketkey" %>
        </div>
      </div>

<div class="form-group">
	<label style="margin-top:2em" class="col-sm-12 control-label no-padding-right text-left" for="form-field-1"> Activate Store</label>

	<div class="col-sm-12">
		<%= f.check_box :active, class:'col-xs-1 col-sm-1',style:'float:left !important' %>
	</div>
</div>



<div class="col-md-12 text-center" style="margin-top:2em;margin-bottom:10em;">
	<div class="col-md-12">
		<%= f.button type:'submit', class:"submit-button" do %>
		<i class="ace-icon fa fa-save bigger-110"></i>
		Save Store Details
		<% end %><br><br>
	</div>
</div>

<%end%>
</div>
