


<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= @store.store_name %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<style>
  .panel {
    background: rgba(0, 0, 0, 0.5);
    width: 50%;
    height: 400px;
  }

  .border {
    border-style: solid;
    border-color: #FFFFFF;
    border-width: 1px;
  }

  body {
  <% if @camp.background == 'image' %> background-image: url('<%= @camp.bg_img_url.to_s %>');
  <% else %> background-color: <%= @camp.background_color %>;
  <% end %> font-family: "Baskerville";
    background-size: cover;
  }

  video {
    border-style: solid;
    border-color: #FFFFFF;
    border-width: 1px;
  }

  input[type=text] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
    background-position: center;
  }

  button {
    background-color: #B5252E;
    color: #000000;
    font-family: "Century Gothic";
  }

  a {
    text-decoration: none;
    color: #FFFFFF;
  }

  a:visited {
    text-decoration: none;
    color: #FFFFFF;
  }

  a:hover {
    text-decoration: none;
    color: #FFFFFF;
  }

  ::-webkit-input-placeholder {
    color: #000000;
  }

  .outer {
    display: table;
    position: absolute;
    height: 100%;
    width: 100%;
  }

  .middle {
    display: table-cell;
    vertical-align: middle;
  }

  .inner {
    margin-left: auto;
    margin-right: auto;
    width: 100%;
  }
</style>

<body>
<div class="outer">
  <div class="middle">
    <div class="inner">
      <div class="row">
        <div class="condend">
          <div class="text-center col-md-6 col-md-offset-3">
            <% if !flash[:alert].nil? %>
            <span style="font-size: 20px;color: red;font-weight: bold; background-color: white;opacity:0.8;padding:3px;border-radius: 3px"><%= alert %></span>
                <% end %>
            <%= form_tag("/tickets/verify", method: "post") do %>
                <% if !@today %>
                    <p class="text-center" style="color:<%= @camp.text_color %>; font-size:35px; font-family:'Arial';">
                      <strong>Please enter the ticket we sent you to access the internet</strong></p>
                <% else %>
                    <p class="text-center" style="color:<%= @camp.text_color %>; font-size:35px; font-family:'Arial';">
                      <strong>You have received your code for today. Please Request an access ticket from staff</strong>
                    </p>
                <% end %>
                <input type="text" name="ticket" class="text-center" required/><br><br><br>
                <%= submit_tag 'CONNECT', class: 'submit-button col-md-6 col-md-offset-3 col-xs-12"', id: 'con', type:'submit'%>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
</html>
