<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= @store.store_name %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<style>
  .panel{
    background: rgba(0, 0, 0, 0.5);
    width: 50%;
    height: 400px;
  }

  .border {
    border-style: solid;
    border-color: #FFFFFF;
    border-width: 1px;
  }

  body {
  <% if @camp.background == 'image' %> background-image: url('<%= @camp.bg_img_url.to_s %>');
  <% else %> background-color: <%= @camp.background_color %>;
  <% end %> font-family: "Arial";
    background-size: cover;
    color:<%= @camp.text_color %>
  }

  video {
    border-style: solid;
    border-color: #FFFFFF;
    border-width: 1px;
  }

  input[type=text] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
    background-position: center;
  }

  input[type=number] {
    width: 100%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
    background-position: center;
  }


  button {
    background-color: #B5252E;
    color: #000000;
    font-family: "Arial";
  }

  a {
    text-decoration: none;
    color: #FFFFFF;
  }

  a:visited {
    text-decoration: none;
    color: #FFFFFF;
  }

  a:hover {
    text-decoration: none;
    color: #FFFFFF;
  }

  ::-webkit-input-placeholder {
    color: #000000;
  }

  .outer {
    display: table;
    position: absolute;
    height: 100%;
    width: 100%;
  }

  .middle {
    display: table-cell;
    vertical-align: middle;
  }

  .inner {
    margin-left: auto;
    margin-right: auto;
    width: 100%;
  }
  .submit-button{
		display: inline-block;
		width: 100%;
		margin-left: auto;
		margin-right: auto;
		border-radius: 0px;
		border: 2px solid grey !important;
		background: #fff !important;
		color: #016d6f !important;
		transition: all 0.5s;
		font-weight: 700;
		padding: 0.7em;
		text-align: center;
		text-decoration: none;
	}
	.submit-button:hover{
		display: inline-block;
		width: 100%;
		margin-left: auto;
		margin-right: auto;
		border-radius: 0px;
		border: 2px solid #000 !important;
		background: grey !important;
		color: #fff !important;
		transition: all 0.5s;
		font-weight: 700;
		padding: 0.7em;
		text-align: center;
		text-decoration: none;
	}
</style>
<script>
    function chk(){
        phone = $("#p_phone").val();
        if(phonecheck(phone)){
            $("#br_btn").removeAttr("disabled");
        }else{
            $("#br_btn").attr("disabled","true");
        }

    }



    function phonecheck(phonenumber) {
        //var phoneno = /^(?:(?:254|\+254|0)?(07(?:(?:[12][0-9])|(?:0[0-8])|(9[0-2]))[0-9]{6})|(?:254|\+254|0)?(7(?:(?:[3][0-9])|(?:5[0-6])|(8[5-9]))[0-9        ]{6})    |(?:254|\+254|0)?(77[0-6][0-9]{6})|(?:254|\+254|0)?(76[34][0-9]{6}))$/;
        var phoneno = /^(2547)([0-9|7])(\d){7}$/;
        if (phonenumber.match(phoneno)) {
            $(".error").html("");
            return true;
        } else {
            $(".error").html("<p style='color:red;font-size:20px;'>Invalid phone, Please enter the format 2547xxxxxxx</p>");
            return false;
        }
    }
</script>

<body>
<div class="outer">
  <div class="middle">
    <div class="inner">
      <div class="row">
        <div class="condend">
          <div class="text-center col-md-6 col-md-offset-3">
            <span style="font-size: 20px;color: red;font-weight: bold;"><%= alert %></span>
            <%= form_for :ticket, :url => {:controller=>"page" ,:action=>"ticket"}, method: "post" , remote:true do  |f|%>
                <p class="text-center" style="color:<%= @camp.text_color %>; font-size:36px; font-family:'Arial';">
                  <strong>Please enter your phone number, we'll SMS you your access code</strong></p>
                <p class="text-center" style="color:<%= @camp.text_color %>; font-size:15px; font-family:'Arial';">Use international format please e.g Kenya: 2547xxxxxxxx, Uganda: 256xxxxxxxxx</p>
                <%= f.number_field :phone, required:"required", id:'p_phone' %><br><br>
                <div class="error"></div>
                <div class=""><%= submit_tag 'CONNECT !', class: 'submit-button', id: 'br_btn', type: 'submit' %><br><br><br></div>
                <div class="col-md-12 text-center"><%= link_to "DO YOU HAVE A CODE ALREADY ?", pages_code_path %></div>
            <% end %>
          </div>

        </div>
      </div>
    </div>
    <div class="col-md-12"><br><br><br>
      <p style="color:#000;text-align:center;font-weight:900">Powered by <a target="_blank" href="http://www.cnetwifi.com" style="color:#016d6f;font-weight:900">C-NET Wifi</a></p>
    </div>
  </div>
</div>
</body>
</html>
