
<div class="row text-center" style="margin-top: 2em;">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <% if @camp.fb_status %>
        <div class="col-md-4 col-xs-12" style="margin-top:2em">
          <a href="<%= pages_facebook_path %>" class="submit-button"><i class="fa fa-facebook"></i>&nbsp; Like our Facebook page</a>
        </div>
    <% end %>
    <% if @camp.sms_status %>
        <div class="col-md-4 col-xs-12" style="margin-top:2em">
          <a href="<%= pages_phone_path %>" class="submit-button"><i class="fa fa-phone"></i>&nbsp; SMS Login</a>
        </div>
    <% end %>
    <% if @camp.email_status %>
        <div class="col-md-4 col-xs-12" style="margin-top:2em">
          <a href="<%= pages_email_path %>" class="submit-button"><i class="fa fa-envelope"></i>&nbsp; Email Login</a>
        </div>
    <% end %>
  </div>
</div>
<div class="col-md-12"><br><br><br>
  <p style="color:#000;text-align:center;font-weight:900">Powered by <a target="_blank" href="http://www.cnetwifi.com" style="color:#016d6f;font-weight:900">C-NET Wifi</a></p>
</div>
