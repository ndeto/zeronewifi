
<%= render 'layouts/alerts' %>
<div class="col-md-12">
<h1 class="myclass text-center"><i class="fa fa-edit"></i> Edit <%= resource_name.to_s.humanize %> Details</h1>
</div>
<div class="col-md-8 col-md-offset-2 col-xs-12" style="background:#f5f5f5;margin-bottom:8em">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:''}, method:'put') do |f| %>

    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :store_name, class:"col-sm-12 control-label no-padding-right", style:"margin-top:2em" %><br/>
      <div class="col-sm-12">
        <%= f.text_field :store_name, class: 'col-xs-12 col-sm-12', placeholder: "Store Name", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class:"col-sm-12 control-label no-padding-right", style:"margin-top:2em" %><br/>
      <div class="col-sm-12">
        <%= f.email_field :email, autofocus: true, class: 'col-xs-12 col-sm-12', placeholder: "Email" %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <label style="margin-top:2em" class="col-sm-12 control-label no-padding-right" for="form-field-1"> Password - <% if @minimum_password_length %><em style="color:red"><%= @minimum_password_length %> characters minimum</em><% end %> <i>(leave blank if you don't want to change it).</i></label>
      <div class="col-sm-12">
        <%= f.password_field :password, autocomplete: "off",class: 'col-xs-12 col-sm-12',placeholder:'Password' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation ,class:"col-sm-3 control-label no-padding-right", style:"margin-top:2em"%><br/>
      <div class="col-sm-12">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'col-xs-12 col-sm-12', placeholder: "Password Confirmation" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password, class:"col-sm-12 control-label no-padding-right", style:"margin-top:2em" %> <p></p><i>(we need your current password to confirm your changes)</i><br/>
      <div class="col-sm-12">
        <%= f.password_field :current_password, autocomplete: "off", class: 'col-xs-12 col-sm-12', placeholder: "Current Password" %>
      </div>
    </div>


    <div class="col-md-12" style="margin-top:4em;margin-bottom:10em">
    	<div class="col-md-12 text-center">
    		<%= f.button type:'submit', class:"submit-button" do %>
    		<i class="ace-icon fa fa-save bigger-110"></i>
    		Save Store Details
    		<% end %>
    	</div>
    </div>
    <div class="clearfix"></div>
<% end %>
</div>
