<%= render 'layouts/alerts'%>
<div style="margin-bottom: 3em;" class="col-md-6 col-md-offset-3"><h2>New Store</h2></div>

<div class="col-md-9 col-md-offset-1">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html =>{:class => 'form-horizontal'}) do |f| %>
  <%= devise_error_messages! %>
  
<div class="form-group">
	<label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Store Name </label>
	<div class="col-sm-9">
		<%= f.text_field :store_name, class:'col-xs-10 col-sm-5', placeholder:"Store Name", required:'required' %>
	</div>
</div>

<div class="form-group">
	<label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Email </label>
	<div class="col-sm-9">
		<%= f.text_field :email, class:'col-xs-10 col-sm-5', placeholder:"Email", required:'required' %>
	</div>
</div>

<div class="form-group">
	<label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Username </label>
	<div class="col-sm-9">
		<%= f.text_field :username, class:'col-xs-10 col-sm-5', placeholder:"Username", required:'required' %>
	</div>
</div>

<div class="form-group">
	<label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Password <i>(leave blank if you don't want to change it)</i></label>
	<div class="col-sm-9">
		<%= f.password_field :password, class:'col-xs-10 col-sm-5', placeholder:"Password" %>
		<% if @minimum_password_length %>
      <br />
        <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
	</div>
</div>

  <div class="form-group">
	<label class="col-sm-3 control-label no-padding-right" for="form-field-1"> Confirm Password </label>
	<div class="col-sm-9">
		<%= f.password_field :password_confirmation, class:'col-xs-10 col-sm-5', placeholder:"Password",  autocomplete: "off" %>
	</div>
</div>

<div class="clearfix form-actions">
	<div class="col-md-offset-3 col-md-9">
		<%= f.button type:'submit', class:"btn btn-info" do %>
		<i class="ace-icon fa fa-check bigger-110"></i>
		Submit
		<% end %>
	</div>
</div>
<% end %>


</div>