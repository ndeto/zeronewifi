<div class="col-md-12">
<h1 class="myclass text-center"><i class="fa fa-plus"></i> Create New Ticket</h1>
</div>
<div class="col-md-8 col-md-offset-2" style="background:#f5f5f5;margin-bottom:8em">
<% render 'form', ticket: @ticket %>


<%= form_for(@ticket, remote:true) do |f| %>
    <% if @ticket.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

          <ul>
            <% @ticket.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label "Number of Use", style:"margin-top:2em" %>
      <input type="number" class="form-control" name="number_of_use" id="number_of_use" value="1" min="1" />
    </div>

    <div class="actions text-center" style="margin-top:4em;margin-bottom:8em">
      <%= f.button type:'submit', class:"submit-button" do %>
  		<i class="ace-icon fa fa-plus bigger-110"></i>
  		Create Ticket
  		<% end %>
      <div style="margin-top: 2em;" class="col-md-6 col-md-offset-3">
        <div class="text-center">
          <span class="tckts" style="font-size: 30px;color: green;font-weight: bold;"></span>
        </div>
      </div>
    </div>
<% end %>
</div>
