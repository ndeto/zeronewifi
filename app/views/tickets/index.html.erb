<%= render 'layouts/alerts'%>
<div class="col-md-12">
<h1 class="myclass"><i class="fa fa-ticket"></i> Your Tickets</h1></br><br>
</div>
  <div class="col-md-12">
    <a href="<%= key_ticket_path(current_store.ticket_key) %>" class="my-button"> <i class="ace-icon fa fa-plus"></i> New Ticket</a>
  </div>
  <div class="col-md-12">
    <h3 class="header smaller lighter myclass">Have a look at your Tickets</h3>

    <div class="clearfix">
      <div class="pull-right tableTools-container"></div>
    </div>
    <div class="table-header">
      <i class="fa fa-ticket"></i> Tickets
    </div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Number of Use</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.code %></td>
        <td><%= ticket.number_of_use %></td>
        <td><span class="blue"><i class="fa fa-edit"></i> <%= link_to 'Edit', edit_ticket_path(ticket) %> </span> | <span class="red"><i class="fa fa-trash"></i> <%= link_to 'Delete', ticket, method: :delete, data: { confirm: 'Are you sure?' },class:'red' %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</br>

  </div>
