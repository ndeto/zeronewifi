<%= render 'layouts/alerts'%>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <a href="<%= new_ticket_path %>" class="btn btn-success"> <i class="ace-icon fa fa-plus"></i> New Ticket</a>
  </div>
</div>

<div class="row">
  <div class="col-xs-9 col-md-offset-1">
    <h3 class="header smaller lighter blue"></h3>

    <div class="clearfix">
      <div class="pull-right tableTools-container"></div>
    </div>
    <div class="table-header">
      <h1>Tickets</h1>
    </div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Number of Use</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.code %></td>
        <td><%= ticket.number_of_use %></td>
        <td><span class="blue"> <%= link_to 'Edit', edit_ticket_path(ticket) %> </span> | <span class="red"> <%= link_to 'Delete', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


</br>

  </div>
</div>